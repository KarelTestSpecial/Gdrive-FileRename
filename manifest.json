{
  "manifest_version": 3,
  "name": "Drive Bulk File Rename",
  "version": "1.0",
  "description": "Bulk rename files in Google Drive with prefix removal and sequential naming",
  
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "scripting"
  ],
  
  "host_permissions": [
    "https://drive.google.com/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Drive Bulk File Rename",
    "default_icon": {
      "128": "icon.png"
    }
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [{
    "matches": ["https://drive.google.com/*"],
    "js": ["content.js"],
    "css": ["styles.css"]
  }],
  
  "icons": {
    "128": "icon.png"
  }
}